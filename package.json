{
  "name": "atem-iso-edl-generator",
  "version": "0.1.0",
  "description": "Frame-accurate EDL generation from Blackmagic ATEM switchers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "atem-iso-edl": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts start",
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "start": "node dist/cli.js start",
    "start:dev": "tsx src/cli.ts start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "validate-config": "tsx src/cli.ts validate-config",
    "generate-edl": "tsx src/cli.ts generate-edl",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [
    "atem",
    "blackmagic",
    "edl",
    "broadcast",
    "video",
    "switcher",
    "hyperdeck",
    "multicam",
    "iso-recording"
  ],
  "author": "FiLORUX",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FiLORUX/atem-iso-edl-generator.git"
  },
  "bugs": {
    "url": "https://github.com/FiLORUX/atem-iso-edl-generator/issues"
  },
  "homepage": "https://github.com/FiLORUX/atem-iso-edl-generator#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "atem-connection": "^3.5.0",
    "commander": "^12.1.0",
    "express": "^4.18.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.1.3"
  }
}
